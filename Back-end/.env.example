# Django Settings
# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=hotel.nntc.io,www.hotel.nntc.io

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://hotel.nntc.io,https://www.hotel.nntc.io

# CORS credentials
CORS_ALLOW_CREDENTIALS=True

# SSL/HTTPS settings (optional, defaults to True when DEBUG=False)
SECURE_SSL_REDIRECT=True

# Injast SSO Configuration
# Backend URL for Injast SSO service
INJAST_BACKEND_URL=https://injast-api.example.com

# JWKS URL for JWT verification (optional)
INJAST_JWKS_URL=

# Allowed IPs for Injast callbacks (comma-separated, optional)
INJAST_ALLOWED_IPS=

# JWT Audience for Injast tokens
INJAST_JWT_AUDIENCE=sso

# JWT Algorithm for Injast tokens
INJAST_JWT_ALGORITHM=RS256

# JWKS Cache TTL in seconds
INJAST_JWKS_CACHE_TTL=3600

# Token encryption key for storing Injast access tokens
# Generate a key using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
INJAST_TOKEN_ENCRYPTION_KEY=

# Database Configuration (Optional - for production database)
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# For MySQL: DATABASE_URL=mysql://user:password@localhost:3306/dbname
# DATABASE_URL=
